
@{
    ViewData["Title"] = "Registro2";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .fondoInicio {
        background-color: #C7ECF0;
    }

    h5 {
        font-size: 0.8em;
    }
</style>


    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card fondoInicio">
                <div class="card-body text-center">
                    <img src="~/img/login.png" alt="Logo" class="mb-4" width="150" height="150">
                    <h1>Registrarte</h1>
                    <h5 class="card-title mb-4">Es rápido y fácil.</h5>
                    <form class="text-start" method="POST" action="{{ route('login') }}">
                        <div class="form-group">
                            <label for="usuario" class="text-start">Nombre de usuario:</label>
                            <input type="text" class="form-control mt-1" id="usuario" name="usuario" required>
                        </div>
                        <div class="form-group">
                            <label for="email" class="text-start">Correo electrónico:</label>
                            <input type="email" class="form-control mt-1" id="email" name="email" required autofocus>
                        </div>
                        <div class="form-group">
                            <label for="password" class="text-start">Contraseña:</label>
                            <input type="password" class="form-control mt-1" id="password" name="password" required>
                        </div>
                    </form>
                    <button type="submit" class="btn btn-success btn-block mx-auto mt-3">
                    <a class="text-white" asp-area="" asp-controller="Registro" asp-action="RegistrarDatos">Registrarte</a>
                    </button>
                    <div class="mt-3">
                        <a class="text-blue" asp-area="" asp-controller="Registro" asp-action="IniciarSesion">Iniciar Sesión</a>
                    </div>
                </div>
            </div>
        </div>
    </div>


