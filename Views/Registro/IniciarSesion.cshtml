
@{
    ViewData["Title"] = "Registro1";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .fondoInicio {
        background-color: #C7ECF0;
    }
</style>


    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card fondoInicio">
                <div class="card-body text-center">
                    <img src="~/img/login.png" alt="Logo" class="mb-4" width="150" height="150">
                    <h1 class="card-title mb-4">Iniciar sesión</h1>
                    <form class="text-start" method="POST" action="{{ route('login') }}">
                        <div class="form-group">
                            <label for="email" class="text-start">Correo electrónico</label>
                            <input type="email" class="form-control mt-1" id="email" name="email" required autofocus>
                        </div>
                        <div class="form-group">
                            <label for="password" class="text-start">Contraseña</label>
                            <input type="password" class="form-control mt-1" id="password" name="password" required>
                        </div>
                        <div class="form-group">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="remember" id="remember">
                                <label class="form-check-label text-start" for="remember">
                                    Recordarme
                                </label>
                                <a class="text-blue d-block" asp-area="" asp-controller="Registro" asp-action="OlvidarContraseña">¿Olvide mi contraseña?</a>
                            </div>
                        </div>
                    </form>
                    <button type="submit" class="btn btn-primary btn-block mx-auto">Iniciar sesión</button>
                    <div class="mt-3">
                        <a class="text-blue" asp-area="" asp-controller="Registro" asp-action="Registrarse">Registrarse</a>
                    </div>
                </div>
            </div>
        </div>
    </div>



