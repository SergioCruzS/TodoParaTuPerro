@model ProductosModel
@{
    ViewData["Title"] = "Añadir Producto";
    Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";
}

<main id="main" class="main">
    <br />
    <h1>Ingresa la información del nuevo producto</h1>
    <form method="post" class="form-floating">
        <div class="form-group">
            <label asp-for="Nombre"></label>
            <input class="form-control" asp-for=Nombre/>
        </div>

        <div class="form-group">
            <label asp-for="Marca"></label>
            <input class="form-control" asp-for=Marca/>
        </div>

        <div class="form-group">
            <label asp-for="Descripcion"></label>
            <input class="form-control" asp-for=Descripcion/>
        </div>
        <div class="form-group">
            <label asp-for="Imagen"></label>
            <input class="form-control" asp-for=Imagen/>
        </div>

        <div class="form-group">
            <label asp-for="Stock"></label>
            <input class="form-control" asp-for=Stock/>
        </div>

        <div class="form-group">
            <label asp-for="Inventario"></label>
            <input class="form-control" asp-for=Inventario />
        </div>
        <div class="form-group">
            <label asp-for="Peso"></label>
            <input class="form-control" asp-for=Peso/>
        </div>

        <div class="form-group">
            <label asp-for="Precio"></label>
            <input class="form-control" asp-for=Precio/>
        </div>

        <div class="form-group">
            <label asp-for="Descuento"></label>
            <input class="form-control" asp-for=Descuento/>
        </div>
        <div class="form-group">
            <label asp-for="Id_categoria"></label>
            <input class="form-control" asp-for=Id_categoria/>
        </div>
        <br />
        <div class="text-center panel-body">
            <button type="submit" class="btn btn-sm btn-primary">Pagar</button>
        </div>
    </form>


</main>
